---
layout: layouts/base.njk
templateClass: tmpl-article
---
  <div class="content-menu-fixed">
  <a href="/pretrialproblem">
  <div class="column-header-fixed">
    <h3>PRETRIAL PROBLEM</h3>
  </div>
  </a>
<a href="/projectbackground">
<div class="column-header-fixed">
  <h3>PROJECT BACKGROUND</h3>
</div>
</a>
<a href="/justiceinspiration">
<div class="column-header-fixed">
  <h3>JUSTICE INSPIRATION</h3>
</div>
</a>
<div class="column-header-fixed active-menu-item">
  <h3>RESULTS</h3>
</div>
<a href="/aboutus">
<div class="column-header-fixed">
  <h3>ABOUT US</h3>
</div>
</a>
  </div>
<div class="content-container">
  <div class="mobile-article-category">
    <p>RESULTS</p>
  </div>
<div class="subnav contentNav">
  <ul class="content-navigation">
  {% for article in collections.theArticle %}
  {% set currentArticle = article.data.article %}
    <li><a href="{{ article.url | url }}">{{ currentArticle.title }}</a></li>
  {% endfor %}
  </ul>
</div>
<div class="static-content-container grid-two">
  <h1>{{ article.title }}</h1>
  <img src="{{ article.imageUrl }}" class="cover-image" />
  <h2 class="article-subtitle">{{ article.subtitle }}</h2>
  {{ article.body | markdownify | safe }}
</div>
<div id="mobile-related-content">
  <p class="relatedContentTitle">related content</p>
  <ul class="related-list">
  {% for article in collections.theArticle %}
  {% set currentArticle = article.data.article %}
  <a href="{{ article.url | url }}">
    <li>
      <p class="mobileNavTitle">{{ currentArticle.title }}</p>
      <img src="{{ currentArticle.imageUrl | url }}" class="mobileNavImage" />
    </li>
  </a>
  {% endfor %}
  </ul>
</div>
</div>
<div id="mobile-content-menu" onclick="showDiv();" style="bottom:0;">
  <p>menu</p>
  <ul id="showDiv" style="display:none;">
    <li class="list-item"><a href="/pretrialproblem">Pretrial Problem</a></li>
    <li class="list-item"><a href="/projectbackground">Project Background</a></li>
    <li class="list-item"><a href="/justiceinspiration">Justice Inspiration</a></li>
    <li class="list-item"><a href="/article">Results</a></li>
    <li class="list-item"><a href="/aboutus">About Us</a></li>
  </ul>
</div>
