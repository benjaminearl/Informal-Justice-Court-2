<div class="content-container">
  <div class="mobile-article-category">
    <p>PRETRIAL PROBLEM</p>
  </div>
<div class="subnav contentNav">
  <ul class="content-navigation">
  {% for pretrialProblem in collections.thePretrialProblem %}
  {% set currentPretrialProblem = pretrialProblem.data.pretrialProblem %}
    <li><a href="{{ pretrialProblem.url | url }}">{{ currentPretrialProblem.title }}</a></li>
  {% endfor %}
  </ul>
</div>
  <div class="static-content-container">
    <h2>{{ pretrialProblem.title }}</h2>
    <h1>{{ pretrialProblem.subtitle }}</h1>
    <img src="{{ pretrialProblem.imageUrl }}" class="cover-image" />
    {{ pretrialProblem.body | markdownify | safe }}
  </div>
  <div id="mobile-related-content">
    <p class="relatedContentTitle">related content</p>
    <ul class="related-list">
    {% for pretrialProblem in collections.thePretrialProblem %}
    {% set currentPretrialProblem = pretrialProblem.data.pretrialProblem %}
    <a href="{{ pretrialProblem.url | url }}">
      <li>
        <p class="mobileNavTitle">{{ currentPretrialProblem.title }}</p>
        <img src="{{ currentPretrialProblem.imageUrl | url }}" class="mobileNavImage" />
      </li>
    </a>
    {% endfor %}
    </ul>
  </div>
</div>
